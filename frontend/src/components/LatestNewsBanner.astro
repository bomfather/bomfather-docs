---
import { getCollection } from 'astro:content';

// Fetch latest non-draft news article
const newsArticles = await getCollection('news', ({ data }) => !data.draft);
newsArticles.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());
const latest = newsArticles[0];

// If the latest item links externally, prefer that, otherwise go to /news
const href = latest?.data.externalLink || '/news';
const isExternal = Boolean(latest?.data.externalLink);
---

{latest && (
  <div id="latest-news-banner" class="latest-news-banner" role="region" aria-label="Latest news">
    <div class="container">
      <a href={href} class="latest-news-link" target={isExternal ? '_blank' : undefined} rel={isExternal ? 'noopener noreferrer' : undefined}>
        <span class="title">{latest.data.title}</span>
        <span class="arrow" aria-hidden="true">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
      </a>
    </div>
  </div>
)}

<style>
  .latest-news-banner {
    position: relative;
    z-index: 60; /* above hero and header */
    /* Subtle glossy gradient common on modern AI sites */
    background: linear-gradient(90deg, rgba(11,95,255,1) 0%, rgba(77,145,255,1) 50%, rgba(11,95,255,1) 100%);
    color: #ffffff;
    border-bottom: 1px solid rgba(255,255,255,0.12);
  }

  .latest-news-banner .container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 44px;
    padding: 6px 0;
  }

  .latest-news-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: #ffffff;
    text-decoration: none;
    font-size: 0.92rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    line-height: 1;
    transition: color 0.2s ease;
    max-width: 100%;
  }

  .latest-news-link:focus-visible {
    outline: 2px solid #fff;
    outline-offset: 2px;
    border-radius: 8px;
  }

  .title {
    opacity: 0.98;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    min-width: 0;
  }

  .arrow {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-left: 4px;
    transition: transform 0.25s ease, background-color 0.25s ease;
    background: transparent;
  }

  .latest-news-link:hover .arrow { 
    transform: translateX(2px);
    background: rgba(255,255,255,0.12);
  }

  @media (max-width: 768px) {
    .latest-news-banner .container { 
      min-height: auto; 
      padding: 8px 12px; 
    }
    .latest-news-link { 
      font-size: 0.875rem; 
      gap: 8px; 
      justify-content: center; 
      text-align: center; 
      width: 100%; 
    }
    .title { 
      white-space: normal; 
      overflow: visible; 
      text-overflow: unset; 
      line-height: 1.3; 
    }
    .arrow { display: none; }
  }
</style>

<script>
  // No JS needed; banner is part of normal document flow
</script>

