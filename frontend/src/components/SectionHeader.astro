---
/**
 * Props:
 *  - title: string  (required)
 *  - subtitle?: string
 *  - align?: 'center' | 'left'
 *  - class?: string  (extra utility classes)
 *  - id?: string     (for aria-labelledby targets)
 */
export interface Props {
  title: string;
  subtitle?: string;
  align?: 'center' | 'left';
  class?: string;
  id?: string;
}
const {
  title,
  subtitle = '',
  align = 'center',
  class: extra = '',
  id = ''
} = Astro.props;
const alignClasses = align === 'left'
  ? 'text-left mx-0'
  : 'text-center mx-auto';
---
<header class={`max-w-3xl space-y-4 ${alignClasses} ${extra}`} {id && {id}}>
  <h2 class="text-3xl md:text-4xl font-heading font-bold tracking-tight text-white/90">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg text-mid-gray">
      {subtitle}
    </p>
  )}
</header>