<style is:global>
  /* Blue flashing dots */
  .glow-dot {
    position: absolute;
    width: 6px;
    height: 6px;
    background-color: #3b82f6; /* Tailwind blue-500 */
    border-radius: 9999px;
    box-shadow: 0 0 6px rgba(59, 130, 246, 0.9);
    animation: dot-flash 2.5s ease-in-out infinite;
  }

  @keyframes dot-flash {
    0%, 100% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.8);
      opacity: 0.2;
    }
  }

  /* Removed pulse and slowZoom keyframes */

  pre {
    white-space: pre;
    overflow-x: auto;
    padding: 1rem;
