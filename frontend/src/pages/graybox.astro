import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="GrayBox: The Ultimate Solution for Drone Security and After-Action Reporting"
  description="GrayBox provides mission-critical data integrity and forensic analysis for drones with tamper-proof logs and integrated after-action reporting."
>
  <div class="bg-[#0a0d14] text-white">
    <!-- Hero Section -->
    <div class="relative pt-12 pb-8 md:pt-16 md:pb-12"> 
      <div class="container mx-auto px-4 flex flex-col items-center text-center md:flex-row md:items-center md:justify-between md:text-left md:relative">
        
        <!-- Text Container (Order first on desktop) -->
        <div class="relative z-10 py-8 md:py-12 md:w-3/5 lg:w-3/5 md:pr-8 order-last md:order-first">
          <h1 class="text-4xl max-w-md mx-auto sm:text-5xl md:text-5xl md:max-w-xl md:mx-0 lg:text-6xl lg:max-w-3xl font-heading font-bold mb-4 text-white">GrayBox: The <span class="whitespace-nowrap">Tamper-Proof</span> "BlackBox" for Drones</h1>
          <h2 class="text-lg max-w-md mx-auto sm:text-xl md:text-xl md:max-w-lg md:mx-0 lg:text-2xl text-white/90 font-light">
            Aircraft have black boxes. Why are your drones flying blind?
          </h2>
        </div>

        <!-- SVG Container (Order last on desktop, appears on the right) -->
        <div class="w-1/2 sm:w-1/3 md:w-2/5 lg:w-2/5 order-first md:order-last mb-6 md:mb-0 flex justify-center md:justify-end items-center pointer-events-none">
