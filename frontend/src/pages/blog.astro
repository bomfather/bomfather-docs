---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageSection from '../components/ui/PageSection.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

blogPosts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

// Format date for display (use UTC to avoid off-by-one due to local TZ)
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'UTC',
  });
};
---

<BaseLayout 
  title="Blog - Insights on AI & Security"
  description="Stay informed with the latest insights on AI security, eBPF technology, and kernel-level protection from the Bomfather team."
  showNewsletter={false}
>
  <!-- Blog Header -->
  <PageSection 
    id="blog-header"
    variant="dark"
    size="lg"
    title="Latest Insights"
    subtitle="We've read enough boring blog posts... We promise not to write any ;)"
    headerLevel={1}
    centerHeader={true}
    className="blog-header-section"
  >
  </PageSection>

  <!-- Blog Posts -->
  <PageSection 
    id="blog-posts"
    variant="dark"
    size="lg"
    className="blog-posts-section"
  >
    <div class="blog-posts-container">
      {blogPosts.map((post, index) => (
        <article class="blog-post-card animate-on-scroll" style={`--delay: ${index * 0.1}s`}>
          <a href={`/blog/${post.slug}`} class="blog-post-link">
            <div class="blog-post-content">
              <div class="blog-post-meta">
                <time class="blog-post-date">{formatDate(post.data.publishedAt)}</time>
                <span class="blog-post-author">by {post.data.author}</span>
              </div>
              
              <h2 class="blog-post-title">{post.data.title}</h2>
              <p class="blog-post-description">{post.data.description}</p>
              
              <div class="blog-post-read-more">
                <span class="read-more-text">Read Article</span>
                <svg class="read-more-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </a>
        </article>
      ))}
      
      {blogPosts.length === 0 && (
        <div class="no-posts-message">
          <h3>No blog posts yet</h3>
          <p>Check back soon for the latest insights on AI security and kernel-level protection.</p>
        </div>
      )}
    </div>
  </PageSection>
</BaseLayout>

<style>
  .blog-header-section {
    padding-top: 8rem !important;
    padding-bottom: 2.5rem !important;
  }

  .blog-posts-section {
    padding-top: 1rem !important;
  }

  .blog-posts-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.25rem; /* space between cards */
  }

  .blog-post-card {
    background: transparent;
    border: 2px solid var(--color-border-strong);
    border-radius: 0;
    overflow: visible;
    position: relative;
    isolation: isolate;
    transition: all 0.2s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  /* Paint main surface and offset tile shadow (covered by surface) */
  .blog-post-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: #ffffff; /* solid white tile surface */
    border-radius: inherit;
    z-index: -1; /* ensures the surface covers the shadow */
    pointer-events: none;
  }

  .blog-post-card::after {
    content: '';
    position: absolute;
    inset: 0;
    transform: translate(14px, 14px);
    background: rgba(100, 116, 139, 0.24);
    border-radius: inherit;
    z-index: -2;
    pointer-events: none;
  }

  .blog-post-card.animate-on-scroll {
    animation: slideUpFade 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  .blog-post-card:hover { background: transparent; transform: none; }

  .blog-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .blog-post-content {
    padding: 28px 32px; /* generous buffer around text */
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 18px;
    font-size: 14px;
    color: var(--color-text-tertiary);
    line-height: 1.6; /* ensure breathing room */
  }

  .blog-post-date { color: var(--color-text-tertiary); }

  .blog-post-author { color: var(--color-text-tertiary); }

  .blog-post-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 0.9rem;
    line-height: 1.3;
    transition: color 0.2s ease;
  }

  .blog-post-card:hover .blog-post-title { color: var(--color-text-primary); }

  .blog-post-description {
    color: var(--color-text-secondary);
    margin-bottom: 1.1rem;
    font-size: 16px;
    line-height: 1.7; /* extra buffer between lines */
  }

  .blog-post-read-more {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #DA6A47; /* warm external-link color */
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .blog-post-card:hover .blog-post-read-more { color: #f8af6e; transform: translateX(4px); }

  .read-more-arrow {
    transition: transform 0.2s ease;
  }

  .blog-post-card:hover .read-more-arrow {
    transform: translateX(4px);
  }

  .no-posts-message { text-align: center; padding: 60px 20px; color: var(--color-text-secondary); }

  .no-posts-message h3 { font-size: 1.5rem; font-weight: 700; color: var(--color-text-primary); margin-bottom: 1rem; }

  @keyframes slideUpFade {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .blog-title {
      font-size: 1.875rem;
    }
    
    .blog-subtitle {
      font-size: 1rem;
    }
    
    .blog-post-content { padding: 22px 24px; }
    
    .blog-post-title {
      font-size: 1.25rem;
    }
    
    .blog-posts-container { gap: 1rem; }
  }
</style>

<script>
  // Animate blog posts on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -10% 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-on-scroll');
        }
      });
    }, observerOptions);

    // Observe all blog post cards
    document.querySelectorAll('.blog-post-card').forEach(card => {
      observer.observe(card);
    });

    // Observe blog header
    const blogHeader = document.querySelector('.blog-header');
    if (blogHeader) {
      observer.observe(blogHeader);
    }
  });
</script> 