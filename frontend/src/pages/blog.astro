---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageSection from '../components/ui/PageSection.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const blogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

blogPosts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

// Format date for display
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<BaseLayout 
  title="Blog - Insights on AI & Security"
  description="Stay informed with the latest insights on AI security, eBPF technology, and kernel-level protection from the Bomfather team."
>
  <!-- Blog Header -->
  <PageSection 
    id="blog-header"
    variant="dark"
    size="md"
    className="blog-header-section"
  >
    <div class="blog-header animate-on-scroll">
      <h1 class="blog-title">Latest Insights</h1>
      <p class="blog-subtitle">Deep dives on AI security, eBPF technology, and kernel-level protection</p>
    </div>
  </PageSection>

  <!-- Blog Posts -->
  <PageSection 
    id="blog-posts"
    variant="dark"
    size="lg"
    className="blog-posts-section"
  >
    <div class="blog-posts-container">
      {blogPosts.map((post, index) => (
        <article class="blog-post-card animate-on-scroll" style={`--delay: ${index * 0.1}s`}>
          <a href={`/blog/${post.slug}`} class="blog-post-link">
            <div class="blog-post-content">
              <div class="blog-post-meta">
                <time class="blog-post-date">{formatDate(post.data.publishedAt)}</time>
                <span class="blog-post-author">by {post.data.author}</span>
              </div>
              
              <h2 class="blog-post-title">{post.data.title}</h2>
              <p class="blog-post-description">{post.data.description}</p>
              
              <div class="blog-post-read-more">
                <span class="read-more-text">Read Article</span>
                <svg class="read-more-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </a>
        </article>
      ))}
      
      {blogPosts.length === 0 && (
        <div class="no-posts-message">
          <h3>No blog posts yet</h3>
          <p>Check back soon for the latest insights on AI security and kernel-level protection.</p>
        </div>
      )}
    </div>
  </PageSection>
</BaseLayout>

<style>
  .blog-header-section {
    background: linear-gradient(135deg, #0a0d14 0%, #1a1d23 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .blog-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (min-width: 768px) {
    .blog-title {
      font-size: 3rem;
    }
  }

  .blog-subtitle {
    font-size: 1.125rem;
    color: #d1d5db;
    line-height: 1.625;
  }

  .blog-posts-section {
    background: #0a0d14;
  }

  .blog-posts-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .blog-post-card {
    background: rgba(20, 24, 35, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
  }

  .blog-post-card.animate-on-scroll {
    animation: slideUpFade 0.6s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  .blog-post-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .blog-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .blog-post-content {
    padding: 32px;
  }

  .blog-post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    font-size: 14px;
    color: #71717a;
  }

  .blog-post-date {
    color: #a1a1aa;
  }

  .blog-post-author {
    color: #71717a;
  }

  .blog-post-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.75rem;
    line-height: 1.25;
    transition: color 0.2s ease;
  }

  .blog-post-card:hover .blog-post-title {
    color: #e2e8f0;
  }

  .blog-post-description {
    color: #d1d5db;
    line-height: 1.625;
    margin-bottom: 1rem;
    font-size: 16px;
    line-height: 1.6;
  }

  .blog-post-read-more {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #60a5fa;
    font-weight: 500;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .blog-post-card:hover .blog-post-read-more {
    color: #93c5fd;
    transform: translateX(4px);
  }

  .read-more-arrow {
    transition: transform 0.2s ease;
  }

  .blog-post-card:hover .read-more-arrow {
    transform: translateX(4px);
  }

  .no-posts-message {
    text-align: center;
    padding: 60px 20px;
    color: #71717a;
  }

  .no-posts-message h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }

  @keyframes slideUpFade {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .blog-title {
      font-size: 1.875rem;
    }
    
    .blog-subtitle {
      font-size: 1rem;
    }
    
    .blog-post-content {
      padding: 24px;
    }
    
    .blog-post-title {
      font-size: 1.25rem;
    }
    
    .blog-posts-container {
      gap: 20px;
    }
  }
</style>

<script>
  // Animate blog posts on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -10% 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-on-scroll');
        }
      });
    }, observerOptions);

    // Observe all blog post cards
    document.querySelectorAll('.blog-post-card').forEach(card => {
      observer.observe(card);
    });

    // Observe blog header
    const blogHeader = document.querySelector('.blog-header');
    if (blogHeader) {
      observer.observe(blogHeader);
    }
  });
</script> 