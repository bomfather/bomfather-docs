---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <div class="container flex flex-col items-center justify-center py-20 text-center">
    <h1 class="text-5xl md:text-6xl font-bold font-heading mb-6">404</h1>
    <div class="w-24 h-24 mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 128 128" class="w-full h-full">
        <!-- A broken Merkle tree visualization -->
        <circle cx="64" cy="32" r="16" fill="#0B5FFF"/>
        <circle cx="32" cy="64" r="12" fill="#224BC5"/>
        <circle cx="96" cy="64" r="12" fill="#224BC5"/>
        <circle cx="24" cy="96" r="8" fill="#45C4B0"/>
        <circle cx="48" cy="96" r="8" fill="#45C4B0"/>
        <circle cx="104" cy="96" r="8" fill="#45C4B0"/>
        <!-- Missing node to represent broken link -->
        <circle cx="80" cy="96" r="8" fill="#F3F4F6" stroke="#FF6B35" stroke-width="2" stroke-dasharray="4 2"/>
        
        <!-- Connecting lines -->
        <line x1="64" y1="32" x2="32" y2="64" stroke="#FFFFFF" stroke-width="2"/>
        <line x1="64" y1="32" x2="96" y2="64" stroke="#FFFFFF" stroke-width="2"/>
        <line x1="32" y1="64" x2="24" y2="96" stroke="#FFFFFF" stroke-width="2"/>
        <line x1="32" y1="64" x2="48" y2="96" stroke="#FFFFFF" stroke-width="2"/>
        <line x1="96" y1="64" x2="104" y2="96" stroke="#FFFFFF" stroke-width="2"/>
        <!-- Broken line -->
        <line x1="96" y1="64" x2="80" y2="96" stroke="#FF6B35" stroke-width="2" stroke-dasharray="4 2"/>
      </svg>
    </div>
    <h2 class="text-2xl md:text-3xl font-bold font-heading mb-4">Page Not Found</h2>
    <p class="text-mid-gray max-w-lg mx-auto mb-8">
      The page you're looking for doesn't exist or has been moved. The dependency seems to be missing from our graph.
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button href="/" variant="primary">
        Return Home
      </Button>
      <Button href="/contact" variant="secondary">
        Contact Us
      </Button>
    </div>
  </div>
</BaseLayout> 